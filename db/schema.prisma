enum GymTier {
  CORE
  SUPPORTING
  EDGE
}

enum InvoiceType {
  GST
  NON_GST
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  gymSessions             gymSession[]        @relation("UserGymSessions")
  weightLogs WeightLog[]
  id                      String                    @id @default(cuid())
  name                    String?
  email                   String                    @unique
  emailVerified           DateTime?
  image                   String?
  password                String?
  role                    String                    @default("USER")
  latitude                Float?
  longitude               Float?
  city                    String?
  state                   String?
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  billingEmail            String?
  notifyDuo               Boolean                   @default(true)
  notifyMemberships       Boolean                   @default(true)
  notifyPromos            Boolean                   @default(true)
  phoneNumber             String?
  timezone                String?
  billingAddress          String?
  businessName            String?
  businessType            String?
  logoUrl                 String?
  supportEmail            String?
  supportPhone            String?
  supportWhatsapp         String?
  twoFactorEnabled        Boolean                   @default(false)
  accounts                Account[]
  duosAsOne               Duo[]                     @relation("UserOne")
  duosAsTwo               Duo[]                     @relation("UserTwo")
  emailVerificationTokens EmailVerificationToken[]
  featuredPurchases       FeaturedListingPurchase[]
  ownedGyms               Gym[]
  gymPageViews            GymPageView[]
  invitesSent             Invite[]                  @relation("Inviter")
  ownerInvoices           Invoice[]                 @relation("OwnerInvoices")
  memberInvoices          Invoice[]                 @relation("MemberInvoices")
  leads                   Lead[]
  memberships             Membership[]
  notifications           Notification[]
  ownerSubscriptions      OwnerSubscription[]
  passwordResetTokens     PasswordResetToken[]
  payments                Payment[]
  savedGyms               SavedGym[]
  sessions                Session[]
  subscriptionReminders   SubscriptionReminderLog[]
  transactions            Transaction[]
  verifiedPurchases       VerifiedBadgePurchase[]
  whatsappLogs            WhatsAppLog[]
}

model OwnerSubscription {
  id                String                    @id @default(cuid())
  ownerId           String
  plan              String
  status            String
  startsAt          DateTime
  expiresAt         DateTime
  razorpayOrderId   String?                   @unique
  razorpayPaymentId String?
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @updatedAt
  owner             User                      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  reminders         SubscriptionReminderLog[]

  @@index([ownerId])
  @@index([status])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  purpose   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Gym {
  id                     String                    @id @default(cuid())
  name                   String
  address                String
  longitude              Float
  ownerId                String
  monthlyPrice           Int
  quarterlyPrice         Int?
  yearlyPrice            Int
  partnerDiscountPercent Int                       @default(10)
  coverImageUrl          String?
  createdAt              DateTime                  @default(now())
  updatedAt              DateTime                  @updatedAt
  bankAccountLast4       String?
  bankAccountVerified    Boolean                   @default(false)
  closeTime              String?
  dayPassPrice           Int?
  featuredUntil          DateTime?
  gstCertificateUrl      String?
  gstNumber              String?
  gstVerifiedAt          DateTime?
  openDays               String?
  openTime               String?
  razorpaySubAccountId   String?
  verificationNotes      String?
  verificationStatus     String                    @default("UNVERIFIED")
  verifiedUntil          DateTime?
  quarterlyDiscountType  String                    @default("PERCENT")
  quarterlyDiscountValue Int                       @default(10)
  welcomeDiscountType    String                    @default("PERCENT")
  welcomeDiscountValue   Int                       @default(10)
  yearlyDiscountType     String                    @default("PERCENT")
  yearlyDiscountValue    Int                       @default(15)
  facebookUrl            String?
  instagramUrl           String?
  youtubeUrl             String?
  amenities              String[]                  @default([])
  city                   String?
  featuredEndAt          DateTime?
  featuredStartAt        DateTime?
  gymTier                GymTier                   @default(SUPPORTING)
  hasAC                  Boolean                   @default(false)
  isFeatured             Boolean                   @default(false)
  lastContactedAt        DateTime?
  ownerConsentAt         DateTime?
  responsivenessOverride Int?
  responsivenessScore    Int                       @default(0)
  state                  String?
  suspendedAt            DateTime?
  imageUrls              String[]                  @default([])
  invoiceTypeDefault     InvoiceType?
  discountCodes          DiscountCode[]
  duos                   Duo[]
  featuredPurchases      FeaturedListingPurchase[]
  owner                  User                      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  pageViews              GymPageView[]
  invites                Invite[]
  invoices               Invoice[]
  invoiceSequence        InvoiceSequence?
  leads                  Lead[]
  memberships            Membership[]
  payments               Payment[]
  savedBy                SavedGym[]
  transactions           Transaction[]
  verifiedPurchases      VerifiedBadgePurchase[]
  whatsappLogs           WhatsAppLog[]
  qrStatics              qrStatic[]
  qrTokens               qrToken[]
  gymSessions            gymSession[]        @relation("GymGymSessions")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  body      String
  entityId  String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, entityId])
}

model FeaturedListingPurchase {
  id                String   @id @default(cuid())
  gymId             String
  ownerId           String
  amount            Int
  status            String
  razorpayOrderId   String   @unique
  razorpayPaymentId String?
  createdAt         DateTime @default(now())
  gym               Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  owner             User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model VerifiedBadgePurchase {
  id                String   @id @default(cuid())
  gymId             String
  ownerId           String
  amount            Int
  status            String
  razorpayOrderId   String   @unique
  razorpayPaymentId String?
  createdAt         DateTime @default(now())
  gym               Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  owner             User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model SavedGym {
  id        String   @id @default(cuid())
  userId    String
  gymId     String
  createdAt DateTime @default(now())
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gymId])
}

model DiscountCode {
  id            String   @id @default(cuid())
  gymId         String
  code          String
  maxUses       Int      @default(100)
  usedCount     Int      @default(0)
  validFrom     DateTime @default(now())
  validUntil    DateTime
  createdAt     DateTime @default(now())
  discountType  String   @default("PERCENT")
  discountValue Int
  gym           Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  @@unique([gymId, code])
}

model Membership {
  id                String        @id @default(cuid())
  userId            String
  gymId             String
  planType          String
  basePrice         Int
  finalPrice        Int
  discountBreakdown String?
  active            Boolean       @default(true)
  startedAt         DateTime      @default(now())
  expiresAt         DateTime
  invoice           Invoice[]     @relation("MembershipInvoice")
  gym               Gym           @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  gymSessions       gymSession[]  @relation("MembershipGymSessions")
}

model GymPageView {
  id        String   @id @default(cuid())
  gymId     String
  userId    String?
  createdAt DateTime @default(now())
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id])

  @@index([gymId, createdAt])
}

model Duo {
  id        String   @id @default(cuid())
  userOneId String
  userTwoId String
  gymId     String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  userOne   User     @relation("UserOne", fields: [userOneId], references: [id], onDelete: Cascade)
  userTwo   User     @relation("UserTwo", fields: [userTwoId], references: [id], onDelete: Cascade)

  @@unique([userOneId, userTwoId, gymId])
}

model WeightLog {
  id        String   @id @default(cuid())
  userId    String
  valueKg   Float
  loggedAt  DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}



model Invite {
  id            String   @id @default(cuid())
  email         String
  code          String   @unique
  gymId         String
  inviterId     String
  invitedUserId String?
  accepted      Boolean  @default(false)
  createdAt     DateTime @default(now())
  gym           Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  inviter       User     @relation("Inviter", fields: [inviterId], references: [id], onDelete: Cascade)
}

model Lead {
  id           String   @id @default(cuid())
  gymId        String
  userId       String?
  type         String
  message      String?
  contactName  String?
  contactEmail String?
  contactPhone String?
  createdAt    DateTime @default(now())
  gym          Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user         User?    @relation(fields: [userId], references: [id])

  @@index([gymId, createdAt])
  @@index([userId])
}

model PhoneOtp {
  id          String   @id @default(cuid())
  phoneNumber String   @unique
  codeHash    String
  expiresAt   DateTime
  sendCount   Int      @default(1)
  lastSentAt  DateTime @default(now())
  attempts    Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([phoneNumber])
  @@index([expiresAt])
}

model WhatsAppLog {
  id        String   @id @default(cuid())
  eventType String
  toNumber  String
  status    String
  error     String?
  payload   Json?
  gymId     String?
  userId    String?
  createdAt DateTime @default(now())
  gym       Gym?     @relation(fields: [gymId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([eventType, createdAt])
  @@index([gymId])
  @@index([userId])
}

model SubscriptionReminderLog {
  id               String            @id @default(cuid())
  ownerId          String
  subscriptionId   String
  daysBeforeExpiry Int
  channel          String
  status           String
  error            String?
  createdAt        DateTime          @default(now())
  owner            User              @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  subscription     OwnerSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@unique([subscriptionId, daysBeforeExpiry, channel])
  @@index([ownerId])
}

model Invoice {
  id                                             String         @id @default(cuid())
  invoiceNumber                                  String         @unique
  ownerId                                        String
  gymId                                          String?
  amount                                         Int
  gstNumber                                      String?
  status                                         String         @default("ISSUED")
  issuedAt                                       DateTime       @default(now())
  createdAt                                      DateTime       @default(now())
  userId                                         String?
  membershipId                                   String?
  transactionId                                  String?
  invoiceType                                    InvoiceType    @default(NON_GST)
  taxMode                                        InvoiceTaxMode @default(NONE)
  gstRate                                        Int?
  subtotal                                       Int            @default(0)
  taxTotal                                       Int            @default(0)
  total                                          Int            @default(0)
  currency                                       String         @default("INR")
  gymName                                        String         @default("Fitdex")
  gymAddress                                     String?
  gymCity                                        String?
  gymState                                       String?
  gymGstNumber                                   String?
  memberName                                     String?
  memberEmail                                    String?
  memberState                                    String?
  pdfUrl                                         String?
  gym                                            Gym?           @relation(fields: [gymId], references: [id])
  membership                                     Membership?    @relation("MembershipInvoice", fields: [membershipId], references: [id])
  owner                                          User           @relation("OwnerInvoices", fields: [ownerId], references: [id], onDelete: Cascade)
  Transaction_Invoice_transactionIdToTransaction Transaction?   @relation("Invoice_transactionIdToTransaction", fields: [transactionId], references: [id])
  user                                           User?          @relation("MemberInvoices", fields: [userId], references: [id])
  items                                          InvoiceItem[]
  taxes                                          InvoiceTax[]
  transaction                                    Transaction[]  @relation("TransactionInvoice")

  @@index([ownerId, issuedAt])
  @@index([gymId])
  @@index([transactionId])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Int
  unitPrice   Int
  total       Int
  createdAt   DateTime @default(now())
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model InvoiceTax {
  id        String         @id @default(cuid())
  invoiceId String
  taxType   InvoiceTaxType
  rate      Int
  amount    Int
  createdAt DateTime       @default(now())
  invoice   Invoice        @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model InvoiceSequence {
  id         String   @id @default(cuid())
  gymId      String   @unique
  lastNumber Int      @default(0)
  updatedAt  DateTime @default(now()) @updatedAt
  gym        Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
}

model Payment {
  id                String   @id @default(cuid())
  userId            String
  gymId             String
  amount            Int
  razorpayOrderId   String?
  razorpayPaymentId String?
  status            String
  createdAt         DateTime @default(now())
  gym               Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id                                         String     @id @default(cuid())
  userId                                     String
  gymId                                      String
  membershipId                               String
  totalAmount                                Int
  platformCommissionAmount                   Int
  gymPayoutAmount                            Int
  razorpayOrderId                            String     @unique
  razorpayPaymentId                          String?
  paymentStatus                              String
  settlementStatus                           String
  createdAt                                  DateTime   @default(now())
  updatedAt                                  DateTime   @updatedAt
  invoiceId                                  String?
  Invoice_Invoice_transactionIdToTransaction Invoice[]  @relation("Invoice_transactionIdToTransaction")
  gym                                        Gym        @relation(fields: [gymId], references: [id], onDelete: Cascade)
  invoice                                    Invoice?   @relation("TransactionInvoice", fields: [invoiceId], references: [id])
  membership                                 Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  user                                       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gymId])
  @@index([membershipId])
}

model RazorpayWebhookEvent {
  id          String    @id @default(cuid())
  eventId     String    @unique
  eventType   String
  payload     Json
  processedAt DateTime?
  createdAt   DateTime  @default(now())
}

model qrStatic {
  gymId      String
  type       String
  currentKeyVersion Int
  revokedAt  DateTime?
  gym        Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  @@id([gymId, type])
}

model qrToken {
  tokenHash  String   @id
  gymId      String
  type       String
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())
  gym        Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)
}

model gymSession {
  id                  String   @id @default(cuid())
  userId              String
  gymId               String
  membershipId        String?
  entryAt             DateTime
  exitAt              DateTime?
  durationMinutes     Int?
  calories            Int?
  validForStreak      Boolean  @default(false)
  endedBy             String?
  verificationStatus  String   @default("PENDING")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
    user                User     @relation("UserGymSessions", fields: [userId], references: [id], onDelete: Cascade)
  gym                 Gym      @relation("GymGymSessions", fields: [gymId], references: [id], onDelete: Cascade)
    membership          Membership? @relation("MembershipGymSessions", fields: [membershipId], references: [id])

  @@index([userId])
  @@index([gymId])
  @@index([membershipId])
}

enum InvoiceTaxMode {
  CGST_SGST
  IGST
  NONE
}

enum InvoiceTaxType {
  CGST
  SGST
  IGST
}

model LedgerEntry {
  id        String   @id @default(cuid())
  userId    String?
  gymId     String?
  amount    Int
  type      String
  createdAt DateTime @default(now())
}
