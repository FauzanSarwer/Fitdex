# Database (PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Admin access (comma-separated)
ADMIN_EMAILS="admin@fitdex.com"
ADMIN_SHORTCUT_USERNAME="admin"
ADMIN_SHORTCUT_PASSWORD="set-a-strong-password"
ADMIN_SHORTCUT_EMAIL="admin@fitdex.local"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Password security
PASSWORD_PEPPER="your-secret-pepper-string"
OTP_PEPPER="your-otp-pepper-string"

# Google OAuth
GOOGLE_CLIENT_ID=XXXXX
GOOGLE_CLIENT_SECRET=XXXXX


# Razorpay (key id is public, used in checkout.js)
NEXT_PUBLIC_RAZORPAY_KEY_ID=XXXXX
RAZORPAY_KEY_ID=XXXXX
RAZORPAY_KEY_SECRET=XXXXX
RAZORPAY_WEBHOOK_SECRET=XXXXX

# OpenStreetMap (No API key needed - using Nominatim for reverse geocoding)
# Optional but recommended to avoid Nominatim rate limits
NOMINATIM_USER_AGENT="Fitdex/1.0"
GEOCODE_TIMEOUT_MS=5000
GEOCODE_PROVIDER_ORDER="nominatim,mapsco,photon"
# Optional: maps.co API key for higher limits and better reliability
GEOCODE_MAPSCO_API_KEY=

# Cloudinary (uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# SMTP (email delivery)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM="Fitdex <no-reply@fitdex.com>"

# WhatsApp notifications
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Cron protection
CRON_SECRET=
OWNER_RENEWAL_REMINDER_DAYS=5

# QR signing-key rotation
QR_KEY_ROTATION_SCHEDULER_ENABLED=true
QR_KEY_ROTATION_SCHEDULER_MS=900000
QR_KEY_ROTATION_INTERVAL_MS=21600000
QR_ROTATION_SYSTEM_ACTOR_ID=
QR_ROTATION_CRON_SECRET=
